{{#if this.isActive}}
  <input
    class="input -mb-2"
    value={{@value}}
    {{did-insert this.focus}}
    {{on "keydown" this.handleKeydown}}
    {{on "blur" this.toggleState}}
    ...attributes>
{{else}}
  <span tabindex="0" {{on "click" this.toggleState}} {{on "focus" this.toggleState}}>
    {{#if hasBlock}}
      {{yield}}
    {{else}}
      {{@value}}
    {{/if}}
  </span>
{{/if}}